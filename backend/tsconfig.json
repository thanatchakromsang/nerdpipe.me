{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "es5"],
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@configs/*": ["./src/configs/*"],
      "@entity/*": ["./src/entity/*"],
      "@generated/*": ["./src/generated/*"],
      "@migration/*": ["./src/migration/*"],
      "@resolvers/*": ["./src/resolvers/*"],
      "@subscriber/*": ["./src/subscriber/*"],
      "@tests/*": ["./src/tests/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "jest",
    "src/setupTests.ts"
  ]
}
